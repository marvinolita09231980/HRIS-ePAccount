                                    <div style="float:right; width:64%;">
                                        <input id="txtb_monthly_rate" ng-model="txtb_monthly_rate" class="form-control inputfield text-right" disabled />
                                    </div>
                                </div>

                            </div>


                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <div style="float:left; width:36%;">
                                        <label style="padding-top:5px;" class="font-bold">Remarks :</label>
