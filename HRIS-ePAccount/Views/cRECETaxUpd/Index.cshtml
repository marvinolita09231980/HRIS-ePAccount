
@{
    ViewBag.Title = "Index";
}


<script src="~/Angular/ng-cRECETaxUpd.js"></script>
<section ng-app="ng_HRD_App" ng-controller="cRECETaxUpd_ctrlr">

    <div class="wrapper wrapper-content animated fadeInRight" style="padding:10px 0px 0px 0px!important">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox-title" style="background-color:#507CD1;border-radius:5px 5px 0px 0px;">

                    <div class="row">
                        <div class="col-lg-4">
                            <b><h2 class="text-white">For Review/Approval -> Tax Update</h2></b>
                        </div>
                        <div id="table_search_rc" class="col-lg-8">
                            <input type="search" class="form-control headerSearch" tableref="datalist_grid_rc" placeholder="Search ....">
                        </div>
                        <div id="table_search_jo" class="col-lg-8 hidden">
                            <input type="search" class="form-control headerSearch" tableref="datalist_grid_jo" placeholder="Search ....">
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="row" id="rc_controls">
                            <div class="col-sm-4">
                                <span class="pull-left font-bold" style="margin-top:9px;margin-right:10px;">Show</span>
                                <select class="form-control field-select-sm setTableRow" id="ddl_show_entries_rc" style="width:30%;float:left;" ng-model="rowLen" tableref="datalist_grid_rc">
                                    <option value="5" selected>5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                </select>
                                <span class="font-bold" style="float:left;margin-top:9px;margin-left:10px;">entries</span>
                            </div>

                            <div class="col-sm-4">
                                <div style="width:40%; float:left;">
                                    <span class="pull-left font-bold" style="margin-top:9px;margin-right:10px;font-weight:bold;">Employement Type:</span>
                                </div>
                                <div style="width:60%; float:right;">
                                    <select id="ddlemploymenttype" ng-model="ddlemploymenttype" ng-change="SelectEmploymentType(ddlemploymenttype)" class="form-control field-select-sm" style="width:100%;">
                                        <option value="RE">Regular</option>
                                        <option value="CE">Casual</option>
                                    </select>
                                </div>

                            </div>
                            <div class="col-sm-4">
                                <button id="btn-approve-all-rc" class="btn btn-success btn-sm btn-block" ng-click="ApproveAllTaxUpdRC()">Approve All<i class="fa fa-thumbs-up"></i></button>
                            </div>


                        </div>

                        <div class="row hidden" id="jo_controls">
                            <div class="col-sm-4">
                                <span class="pull-left font-bold" style="margin-top:9px;margin-right:10px;">Show</span>
                                <select class="form-control field-select-sm setTableRow" id="ddl_show_entries_jo" style="width:30%;float:left;" ng-model="rowLen" tableref="datalist_grid_jo">
                                    <option value="5" selected>5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                </select>
                                <span class="font-bold" style="float:left;margin-top:9px;margin-left:10px;">entries</span>
                            </div>
                            <div class="col-sm-3">
                                <div style="width:26%; float:left;">
                                    <span class="pull-left font-bold" style="margin-top:9px;margin-right:10px;font-weight:bold;">Year:</span>
                                </div>
                                <div style="width:74%; float:right;">
                                    <select class="form-control" id="ddl_year" ng-model="ddl_year" ng-change="getJOData()">
                                        <option ng-repeat="lst in year" value="{{lst.year}}">{{lst.year}}</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div style="width:26%; float:left;">
                                    <span class="pull-left font-bold" style="margin-top:9px;margin-right:10px;font-weight:bold;">Status:</span>
                                </div>
                                <div style="width:74%; float:right;">
                                    <select class="form-control" id="ddl_status" ng-model="ddl_status" ng-change="getJOData()">
                                        <option value="N">New</option>
                                        <option value="A">Approved</option>
                                        <option value="R">Rejected</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-sm-2">
                                <button id="btn-approve-all-jo" class="btn btn-success btn-sm btn-block" ng-click="ApproveAllTaxUpdJO()">Approve All<i class="fa fa-thumbs-up"></i></button>
                            </div>

                        </div>
                    </div>
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li id="rc" ng-click="changeTab(1)" class="active"><a data-toggle="tab" href="#tab-1">Regular/Casual</a></li>
                            <li id="jo" ng-click="changeTab(2)" class=""><a data-toggle="tab" href="#tab-2">Job Order</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="tab-1" class="tab-pane active">
                                <div class="ibox-content">
                                    <div class="col-12 table-resposive">
                                        <table id="datalist_grid_rc" class="table table-striped table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>ID NO</th>
                                                    <th>EMPLOYEE NAME</th>
                                                    <th>TAX RATE</th>
                                                    <th>TAX AMT.</th>
                                                    <th>YEAR</th>
                                                    <th>EFF. DATE</th>
                                                    <th>STATUS</th>
                                                    <th>ACTION</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div id="tab-2" class="tab-pane">
                                <div class="ibox-content">
                                    <div class="col-12 table-resposive">
                                        <table id="datalist_grid_jo" class="table table-striped table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>ID NO</th>
                                                    <th>EMPLOYEE NAME</th>
                                                    <th>BSC. TAX</th>
                                                    <th>ADDL. TAX</th>
                                                    <th>VAT</th>
                                                    <th>EFF. DATE</th>
                                                    <th>STATUS</th>
                                                    <th>ACTION</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>