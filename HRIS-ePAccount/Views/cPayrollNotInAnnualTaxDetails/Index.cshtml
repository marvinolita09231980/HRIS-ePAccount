    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">

                        <!-- Row 1: Show entries + Search -->
                        <div class="row align-items-center">
                            <div class="col-lg-3 col-md-4 col-sm-12 mb-2">
                                <div class="d-flex align-items-center flex-wrap">
                                    <span class="font-bold me-2">Show</span>
                                    <select class="form-control" id="ddl_show_entries"
                                            style="width:90px;"
                                            ng-model="rowLen"
                                            ng-change="setNumOfRow(rowLen,'datalist_grid')">
                                        <option value="5" selected>5</option>
                                        <option value="10">10</option>
                                        <option value="15">15</option>
                                        <option value="20">20</option>
                                    </select>
                                    <span class="font-bold ms-2">entries</span>
                                </div>
                            </div>

                            <div class="col-lg-9 col-md-8 col-sm-12 mb-2">
                                <input type="search" class="form-control"
                                       ng-model="search_box"
                                       ng-keyup="search_in_list(search_box,'datalist_grid')"
                                       placeholder="Search ....">
                            </div>
                        </div>

                        <hr class="m-0 my-2" />

                        <!-- Row 2: Payroll Year + Employee ID + Buttons -->
                        <div class="row g-2 align-items-end">
                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <label class="font-bold mb-1" for="txtb_ddl_year">Payroll Year</label>
                                <input id="txtb_ddl_year"
                                       ng-model="txtb_ddl_year"
                                       class="form-control"
                                       style="font-weight:bold;"
                                       disabled />
                            </div>

                            <div class="col-lg-4 col-md-6 col-sm-12">
                                <label class="font-bold mb-1" for="txtb_empl_id">Employee ID</label>
                                <input id="txtb_empl_id"
                                       ng-model="txtb_empl_id"
                                       class="form-control"
                                       style="font-weight:bold;"
                                       disabled />
                            </div>

                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <div class="d-flex gap-2 flex-wrap justify-content-lg-end">
                                    @if (1 == 1)
                                    {
                                        <button type="button"
                                                class="btn btn-success px-4"
                                                ng-click="btn_generate_action()">
                                            <i class="fa fa-share-square-o me-1"></i> Generate
                                        </button>
                                    }

                                    <button type="button"
                                            class="btn btn-info border px-4"
                                            ng-click="BacktoTaxHeader()">
                                        <i class="fa fa-arrow-left me-1"></i> Back to BIR Tax Header
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Row 3: Employment Type + Employee Name -->
                        <div class="row g-2 mt-1">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <label class="font-bold mb-1" for="txtb_empl_type_hdr">Employment Type</label>
                                <input id="txtb_empl_type_hdr"
                                       ng-model="txtb_empl_type_hdr"
                                       class="form-control"
                                       style="font-weight:bold;"
                                       disabled />
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <label class="font-bold mb-1" for="txtb_empl_name_hdr">Employee's Name</label>
                                <input id="txtb_empl_name_hdr"
                                       ng-model="txtb_empl_name_hdr"
                                       class="form-control text-left"
                                       style="font-weight:bold;"
                                       disabled />
                            </div>
                        </div>

                    </div>

                    <div class="ibox-content">
                        <div class="col-12 table-responsive">
                            <table id="pnia_table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Voucher Nbr</th>
                                        <th>Payroll Month</th>
                                        <th>Template Code</th>
                                        <th>Gross Pay</th>
                                        <th>WTAX Amt</th>
                                        <th>Remarks</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="gearLoader" class="gear-loader" style="display:none;">
        <div class="gear-box">
            <i class="fa fa-cog fa-spin fa-3x"></i>
            <div class="gear-text">Processing, please wait...</div>
        </div>
    </div>


</section>

